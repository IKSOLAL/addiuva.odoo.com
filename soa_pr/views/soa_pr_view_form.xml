<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view -->
    <record id="soa_pr_view_form" model="ir.ui.view">
        <field name="name">soa.pr</field>
        <field name="model">soa.pr</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" options="{'no_quick_create':True,'no_create_edit':True,
                            'no_open': True, 'no_create': True}"/>
                            <field name="account_id_soa"/>
                            <field name="client_id_soa"/>
                            <field name="plan_soa" options="{'no_quick_create':True,'no_create_edit':True,
                            'no_open': True, 'no_create': True}"/>
                            <field name="plan_id_soa" readonly="1"/>
                        </group>
                        <group>
                            <field name="plan_id_odoo" readonly="1"/>
                            <field name="plan_name"/>
                            <field name="serv_description"/>
                            <field name="company_id" options="{'no_quick_create':True,'no_create_edit':True,
                            'no_open': True, 'no_create': True}" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree view -->
    <record id="soa_pr_tree_view" model="ir.ui.view">
      <field name="name">soa.pr</field>
      <field name="model">soa.pr</field>
      <field name="arch" type="xml">
        <tree>
            <field name="partner_id"/>
            <field name="account_id_soa"/>
            <field name="client_id_soa"/>
            <field name="plan_soa"/>
            <field name="plan_id_soa"/>
            <field name="plan_id_odoo"/>
            <field name="plan_name"/>
            <field name="serv_description"/>
            <field name="company_id"/>
        </tree>
      </field>
    </record>
</odoo>