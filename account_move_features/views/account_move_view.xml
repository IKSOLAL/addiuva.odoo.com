<odoo>
  <data>

    <record model="ir.ui.view" id="account_move_features.form">
      <field name="name">account_move_features form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <button name="action_post" position="after">
            <field name="move_type" invisible="1"/>
            <field name="entry_tax_bolivia" invisible="1"/>
            <button name="create_entry_taxes" string="Crear Impuestos 3%" class="oe_highlight" type="object" 
                    attrs="{'invisible':['|','|','|',('move_type','!=','out_invoice'),('state','!=','posted'),('company_id','!=',16),('entry_tax_bolivia','!=',False)]}"/>
        </button>
      </field>
    </record>
  </data>
</odoo>